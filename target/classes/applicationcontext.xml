<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="rockMusicBean"
    class="org.example.springcourse.RockMusic">
    </bean>
    <bean id="classicalMusicBean"
          class="org.example.springcourse.ClassicalMusic">
    </bean>


    <bean id="songBean"
          class="org.example.springcourse.Song">
        <property name="music" ref="rockMusicBean"/>
        <property name="volume" value="${musicPlayer.volume}" />
        <property name="name" value="${musicPlayer.name}"/>
    </bean>

    <bean id="songBean2"
          class="org.example.springcourse.Song">
        <property name="music" ref="classicalMusicBean"/>
        <property name="volume" value="${musicPlayer.volume}" />
        <property name="name" value="${musicPlayer.name}"/>
    </bean>

    <bean id="musicPlayer"
        class="org.example.springcourse.MusicPlayer">
        <property name="music">
        <list>
            <ref bean="songBean"/>
            <ref bean="songBean2"/>
        </list>
        </property>
    </bean>

</beans>